<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="application.Controller"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
	alignment="center" hgap="10" vgap="8">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>
    
    <Label text="How many Player are playing?"
    	GridPane.columnIndex="0" GridPane.rowIndex="0"
    	GridPane.columnSpan="2" />
    
    <TextField GridPane.columnIndex="0" GridPane.rowIndex="1"
    	GridPane.columnSpan="2" />
    	
    <Button text="Continue" fx:id="playerSelectButton" onAction="#selectPlayer"
    	GridPane.columnIndex="0" GridPane.rowIndex="3"
    	GridPane.columnSpan="2" />    
</GridPane>